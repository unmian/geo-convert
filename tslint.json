{
  "compilerOptions":{
    "noImplicitAny": true
  },
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "ecmaFeatures": {
    "templateStrings": true
  },
  "rules": {
    "eofline": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "member-access": false,
    "no-consecutive-blank-lines": false,
    "no-console": [
      true,
      "log",
      "error"
    ],
    "no-bitwise": false,
    "object-literal-sort-keys": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "one-line": false,
    "ordered-imports": false,
    "quotemark": true,
    "semicolon": [
      true,
      "always"
    ],
    "curly": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "typedef-whitespace": false,
    "whitespace": false,
    "forin": false,
    "no-return-await": true
  }
}
